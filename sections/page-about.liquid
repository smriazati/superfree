<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%style%}
@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
.page-about {
    padding-top: 144px;
    padding-bottom: 200px;
    display: flex;
    flex: 2;
    background: var(--black);
    color: var(--white);
    overflow: hidden;

}


.page-about .rte h2 {
    max-width: 100%;
    font-size: 160px;
    font-weight: 800;
    line-height: 188px;
    letter-spacing: 0em;
    text-transform: uppercase;
    hyphens: manual;
    margin-bottom: 62px;
}

@keyframes gradient {
	0% { background-position: 0% 0; }
	50% { background-position: 100% 0; }
	100% { background-position: 0% 0; }
}

.page-about .rte h2 {
	animation: gradient 20s linear infinite;
	background: linear-gradient(70deg, rgba(255,38,163,1) 0%, rgba(0,73,176,1) 16%, rgba(238,130,178,1) 33%, rgba(0,194,229,1) 50%, rgba(238,130,178,1) 66%, rgba(0,73,176,1) 83%, rgba(255,38,163,1) 100%);
	background-size: 200% 100%;
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
}

@media (max-width: 998px) {
  .page-about .rte h2 {
      font-size: 66px;
      line-height: 80px;
      text-align: left !important;
  }
}
.page-about .rte h3 {
    font-size: 24px;
    font-weight: 400;
    line-height: 29px;
    letter-spacing: 0em;
    margin-bottom: 24px;
}

.page-about .rte p {
    font-size: 14px;
    font-weight: 400;
    line-height: 21px;
    letter-spacing: 0em;
}

.page-about p+h2,
.page-about h3+h2 {
    margin-top: 200px;
}

.page-about p,
.page-about h3 {
    max-width: 330px;
    margin-left: auto;
    margin-right: auto;
}
@media (max-width: 330px) {

  .page-about p,
  .page-about h3 {
      padding-left: 24px;
      padding-right: 24px;
  }
}

.page-about  .rte  h2 {
  opacity: 0;
  animation: .8s ease-in fadeIn forwards;
}
.page-about  .rte  h3 {
  opacity: 0;
  animation: .8s .4s ease-in fadeIn forwards;
}
{%endstyle%}
<div class="page-about">
  <div class="page-width">
    <h2 class="page-title visually-hidden gradient-text">
      {%- if section.settings.page.title != blank -%}
        {{ section.settings.page.title | escape }}
      {%- else -%}
        {{ 'sections.page.title' | t }}
      {%- endif -%}
    </h2>
    <div class="rte">
      {%- if section.settings.page.content != blank -%}
        {{ section.settings.page.content }}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.page.settings.page.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.page.presets.name"
    }
  ]
}
{% endschema %}
