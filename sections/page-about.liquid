<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%style%}
.page-about {
    padding-top: 144px;
    padding-bottom: 200px;
    display: flex;
    flex: 2;
    background: var(--black);
    color: var(--white);
}

.page-about .rte h2 {
    max-width: 100%;
    font-size: 160px;
    font-weight: 800;
    line-height: 188px;
    letter-spacing: 0em;
    text-transform: uppercase;
    hyphens: manual;
    margin-bottom: 62px;
}

.page-about .rte h3 {
    font-size: 24px;
    font-weight: 400;
    line-height: 29px;
    letter-spacing: 0em;
    margin-bottom: 24px;
}

.page-about .rte p {
    font-size: 14px;
    font-weight: 400;
    line-height: 21px;
    letter-spacing: 0em;
}

.page-about p+h2,
.page-about h3+h2 {
    margin-top: 200px;
}

.page-about p,
.page-about h3 {
    max-width: 330px;
    margin-left: auto;
    margin-right: auto;
}
{%endstyle%}
<div class="page-about">
  <div class="page-width">
    <h2 class="page-title visually-hidden">
      {%- if section.settings.page.title != blank -%}
        {{ section.settings.page.title | escape }}
      {%- else -%}
        {{ 'sections.page.title' | t }}
      {%- endif -%}
    </h2>
    <div class="rte">
      {%- if section.settings.page.content != blank -%}
        {{ section.settings.page.content }}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.page.settings.page.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.page.presets.name"
    }
  ]
}
{% endschema %}
